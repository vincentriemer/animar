{
  "name": "animar",
  "version": "0.8.0",
  "description": "a modern, focused, flexible javascript animation library.",
  "keywords": [
    "web",
    "javascript",
    "animation",
    "additive"
  ],
  "author": {
    "name": "Vincent Riemer",
    "email": "vincentriemer@gmail.com",
    "url": "http://vincentriemer.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentriemer/animar"
  },
  "bugs": {
    "url": "https://github.com/vincentriemer/animar/issues",
    "email": "vincentriemer+animar@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "esnext:main": "src/animar.js",
  "scripts": {

    "clean": "npm run clean:dist && npm run clean:coverage && npm run clean:lib && npm run clean:docs",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "clean:lib": "rimraf lib",
    "clean:docs": "rimraf docs",

    "build": "./scripts/build.sh",
    "prebuild": "npm run clean:dist && npm run clean:lib && npm run prepublish",

    "lint": "eslint src/** test/**",

    "test": "NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover test-scripts/node-test.js",
    "test:browser": "NODE_ENV=test testem ci",
    "pretest": "npm run clean:coverage && npm run lint",

    "prepublish": "npm run clean:lib && ./node_modules/.bin/babel ./src --out-dir ./lib",

    "docs": "esdoc -c esdoc.json",
    "predoc": "npm run clean:docs"

  },
  "pre-commit": [
    "test",
    "build"
  ],
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-eslint": "^4.1.5",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-class-properties": "^6.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-es2015-loose": "^6.1.3",
    "chai": "^3.4.1",
    "compression-webpack-plugin": "^0.2.0",
    "core-js": "^1.2.6",
    "esdoc": "^0.4.3",
    "esdoc-es7-plugin": "^0.0.3",
    "eslint": "^1.10.1",
    "eslint-plugin-flowtype": "^1.0.0",
    "isparta": "^4.0.0",
    "jsdom": "^7.0.2",
    "lodash": "^3.3.1",
    "mocha": "^2.3.4",
    "pre-commit": "^1.1.2",
    "rimraf": "^2.3.1",
    "saucie": "^1.3.1",
    "sinon": "^2.0.0-pre",
    "testem": "^0.9.11",
    "travis-weigh-in": "^1.0.2",
    "webpack": "^1.12.8"
  }
}
