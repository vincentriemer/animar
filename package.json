{
  "name": "animar",
  "description": "a modern, focused, flexible javascript animation library.",
  "keywords": [
    "web",
    "javascript",
    "animation",
    "additive"
  ],
  "author": {
    "name": "Vincent Riemer",
    "email": "vincentriemer@gmail.com",
    "url": "http://vincentriemer.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentriemer/animar"
  },
  "bugs": {
    "url": "https://github.com/vincentriemer/animar/issues",
    "email": "vincentriemer+animar@gmail.com"
  },
  "license": "MIT",
  "main": "dist/animar.js",
  "esnext:main": "dist/animar.es6.js",
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:coverage && npm run clean:lib",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "build": "npm run build:umd && npm run build:es6 && npm run build:production",
    "build:umd": "rollup -c rollup.umd.config.js",
    "build:es6": "rollup -c rollup.es6.config.js",
    "build:production": "rollup -c rollup.production.config.js",
    "build:test": "rollup -c rollup.test.config.js",
    "prebuild": "npm run clean:dist",
    "postbuild": "codeweight && npm run commit:artifacts",
    "lint": "eslint src/** test/**",
    "check-coverage": "istanbul check-coverage --statements 50 --branches 50 --functions 50 --lines 50",
    "test": "NODE_ENV=test babel-node ./node_modules/.bin/isparta cover test-scripts/node-test.js",
    "test:browser": "testem",
    "test:browser:ci": "testem ci",
    "pretest": "npm run clean:coverage && npm run lint",
    "prepublish": "npm run clean:dist && npm run build",
    "commit": "git-cz",
    "commit:artifacts": "git add dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-eslint": "^5.0.0",
    "babel-plugin-syntax-flow": "^6.8.0",
    "babel-plugin-syntax-object-rest-spread": "^6.5.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-es2015-rollup": "^1.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.4.1",
    "codeweight": "^3.0.2",
    "commitizen": "^2.8.2",
    "core-js": "^2.0.3",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "2.2.0",
    "ghooks": "^1.0.3",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "rimraf": "^2.3.1",
    "rollup": "^0.27.1",
    "rollup-plugin-babel": "^2.3.8",
    "rollup-plugin-commonjs": "^2.1.0",
    "rollup-plugin-multi-entry": "^1.0.1",
    "rollup-plugin-node-resolve": "^1.4.0",
    "rollup-plugin-uglify": "^0.2.0",
    "saucie": "^1.4.0",
    "semantic-release": "^6.3.0",
    "sinon": "^2.0.0-pre.2",
    "testem": "^1.10.2",
    "validate-commit-msg": "^2.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run build && npm run test && npm run check-coverage",
      "commit-msg": "validate-commit-msg"
    },
    "codeweight": {
      "rev": "HEAD",
      "files": [
        {
          "path": "dist/animar.js",
          "name": "Development Build"
        },
        {
          "path": "dist/animar.min.js",
          "name": "Production Build"
        },
        {
          "path": "dist/animar.min.js",
          "name": "Production Build",
          "gzip": true
        }
      ]
    }
  }
}
